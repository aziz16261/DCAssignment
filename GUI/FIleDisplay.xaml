<Window x:Class="GUI.FileDisplay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="FileDisplay" Height="450" Width="450">
    <Grid>
        <TextBox x:Name="TextFileDisplay" Text="" HorizontalAlignment="Right" Width="342"/>



        <Image x:Name="ImageFileDisplay" HorizontalAlignment="Right" Height="428" VerticalAlignment="Top" Width="334"/>

        <ListBox x:Name="FileSelectionBox" d:ItemsSource="{d:SampleData ItemCount=5}" SelectionChanged="FileSelectionBox_SelectionChanged" HorizontalAlignment="Left" Width="108"/>


    </Grid>
</Window>
