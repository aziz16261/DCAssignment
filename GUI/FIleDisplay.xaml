<Window x:Class="GUI.FileDisplay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="FileDisplay" Height="450" Width="450">
    <Grid>
        <TextBox x:Name="TextFileDisplay" Margin="108,0,0,0" Text=""/>



        <Image x:Name="ImageFileDisplay" HorizontalAlignment="Left" Height="428" Margin="108,0,0,0" VerticalAlignment="Top" Width="334"/>

        <ListBox x:Name="FileSelectionBox" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,0,342,310"/>
        <Button x:Name="CloseFileButton" Content="Close File" HorizontalAlignment="Left" Height="41" Margin="8,129,0,0" VerticalAlignment="Top" Width="92"/>


    </Grid>
</Window>
